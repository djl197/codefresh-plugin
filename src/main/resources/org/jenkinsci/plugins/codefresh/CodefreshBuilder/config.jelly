<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">

  <f:entry title="Run Codefresh Build" field="build">
    <f:checkbox  default="false"/>
  </f:entry>
  <f:optionalBlock name="selectService" field="selectService" title="Choose service to build" checked="${instance.selectService}">
    <f:entry field="cfService" title="Choose Codefresh service">
      <f:select />
    </f:entry>
    <f:entry field="cfBranch" title="Branch name (optional)">
      <f:textbox />
    </f:entry>
  </f:optionalBlock>
  
  <f:optionalBlock name="launchCf" field="launch" title="Launch a composition" checked="${instance.launchCf}">
    <f:entry field="cfComposition" title="Choose composition to launch.">
      <f:select />
    </f:entry>
  </f:optionalBlock>
</j:jelly>
